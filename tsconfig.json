{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build",
    "types": ["node", "lodash", "express", "jest"],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "**/__tests__", "**/__mocks__", "**/__test_utils__"],
  "include": ["./src/**/*"]
}
